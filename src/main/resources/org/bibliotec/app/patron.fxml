<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.layout.InputGroup?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.MasterDetailPane?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.bibliotec.app.PatronController"
      spacing="20" minHeight="550" minWidth="1100">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <fx:define>
        <ToggleGroup fx:id="tabs"/>
        <MasterDetailPane fx:id="booksView" dividerPosition="0.7" VBox.vgrow="ALWAYS">
            <masterNode>
                <AnchorPane>
                    <TableView fx:id="booksTable" editable="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
                    <ToolBar AnchorPane.bottomAnchor="0">
                        <Button text="Hold" onAction="#hold" userData="$booksTable"/>
                    </ToolBar>
                </AnchorPane>
            </masterNode>
            <detailNode>
                <TableView fx:id="bookLoansTable" minWidth="500" editable="true"/>
            </detailNode>
        </MasterDetailPane>
        <VBox fx:id="profileView" alignment="CENTER">
            <GridPane alignment="CENTER" vgap="40.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="384" minWidth="10.0" prefWidth="111"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="479" minWidth="10.0" prefWidth="189"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <padding>
                    <Insets right="80.0" top="40.0"/>
                </padding>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <Label text="Full Name" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="0"
                       GridPane.valignment="CENTER"/>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Password" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                       GridPane.valignment="CENTER"/>
                <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="E-mail" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Address" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>
            <Button minWidth="75.0" mnemonicParsing="false" text="Save">
                <VBox.margin>
                    <Insets top="30.0"/>
                </VBox.margin>
            </Button>
        </VBox>
        <AnchorPane fx:id="holdsView" VBox.vgrow="ALWAYS">
            <TableView fx:id="holdsTable" editable="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
            <ToolBar AnchorPane.bottomAnchor="0">
                <Button text="Delete" onAction="#delete" userData="$holdsTable"/>
            </ToolBar>
        </AnchorPane>
        <AnchorPane fx:id="loansView" VBox.vgrow="ALWAYS">
            <TableView fx:id="loansTable" editable="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
        </AnchorPane>
    </fx:define>

    <HBox alignment="CENTER" spacing="10">
        <InputGroup>
            <ToggleButton text="Books" toggleGroup="$tabs" userData="$booksView" selected="true"/>
            <ToggleButton text="My Profile" toggleGroup="$tabs" userData="$profileView"/>
            <ToggleButton text="Holds" toggleGroup="$tabs" userData="$holdsView"/>
            <ToggleButton text="Loans" toggleGroup="$tabs" userData="$loansView"/>
        </InputGroup>
        <Button text="Logout" onAction="#logout"/>
    </HBox>
    <fx:reference source="booksView"/>
</VBox>
