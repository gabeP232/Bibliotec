<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.layout.InputGroup?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.bibliotec.app.PatronController"
      spacing="20" minHeight="550" minWidth="1100">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <fx:define>
        <ToggleGroup fx:id="tabs"/>
        <AnchorPane fx:id="booksView">
            <TableView fx:id="booksTable" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
            <ToolBar AnchorPane.bottomAnchor="0">
                <Button text="Hold" onAction="#hold" userData="$booksTable"/>
            </ToolBar>
        </AnchorPane>
        <AnchorPane fx:id="loansView" VBox.vgrow="ALWAYS">
            <TableView fx:id="loansTable" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
        </AnchorPane>
        <AnchorPane fx:id="holdsView" VBox.vgrow="ALWAYS">
            <TableView fx:id="holdsTable" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
            <ToolBar AnchorPane.bottomAnchor="0">
                <Button text="Delete" onAction="#delete" userData="$holdsTable"/>
            </ToolBar>
        </AnchorPane>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="30.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="383.99993896484375" minWidth="10.0" prefWidth="110.6" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="479.20001220703125" minWidth="10.0" prefWidth="188.99999999999997" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Full Name" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Password" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                        <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Confirm Password" textAlignment="CENTER" GridPane.rowIndex="2" />
                        <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="E-mail" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Address" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                    <padding>
                        <Insets right="80.0" top="40.0" />
                    </padding>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </GridPane>
                <Button minWidth="75.0" mnemonicParsing="false" text="Save">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin></Button>
            </children>
        </VBox>
    </fx:define>

    <HBox alignment="CENTER" spacing="10">
        <InputGroup>
            <ToggleButton text="Books" toggleGroup="$tabs" userData="$booksView" selected="true"/>
            <ToggleButton text="Loans" toggleGroup="$tabs" userData="$loansView"/>
            <ToggleButton text="Holds" toggleGroup="$tabs" userData="$holdsView"/>
            <ToggleButton text="My Profile" toggleGroup="$tabs" userData="$profileView"/>
        </InputGroup>
        <Button text="Logout" onAction="#logout"/>
    </HBox>
    <fx:reference source="booksView"/>
</VBox>
